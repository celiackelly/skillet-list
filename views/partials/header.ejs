                                <a class="nav-link" href="/users/<%-currentUser._id %>/dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout?_method=DELETE">Log out</a>
                            </li>
                        <% } %>
                </ul>
            </div>
        </div>
